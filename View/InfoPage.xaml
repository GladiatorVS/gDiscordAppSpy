<UserControl x:Class="gDiscordAppSpy.View.InfoPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gDiscordAppSpy.View"
             mc:Ignorable="d" 
             xmlns:ui="http://schemas.modernwpf.com/2019"
             d:DesignHeight="369.863" d:DesignWidth="550.959">
    <Grid Margin="16.18">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Text="{Binding LastError}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <DockPanel Grid.Row="1" HorizontalAlignment="Right" LastChildFill="False" Margin="0,0,16.18,0">
            <Button Content="Back" Command="{Binding BackButtonCommand}"/>
        </DockPanel>
    </Grid>
</UserControl>
