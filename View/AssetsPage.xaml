<UserControl x:Class="gDiscordAppSpy.View.AssetsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gDiscordAppSpy.View"
             mc:Ignorable="d"
             xmlns:local_m="clr-namespace:gDiscordAppSpy"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             d:DesignHeight="324" d:DesignWidth="524">
    <UserControl.Resources>
        <local_m:UrlToImageConverter x:Key="UrlToImageConverter"/>
    </UserControl.Resources>
    <Grid Margin="16.18">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <ListBox ItemsSource="{Binding Assets}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding ImageUrl, Converter={StaticResource UrlToImageConverter}}" Width="50" Height="50" Margin="5"/>
                            <TextBlock Text="{Binding Text}" VerticalAlignment="Center" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
        
        <DockPanel Grid.Row="1" HorizontalAlignment="Right" LastChildFill="False" Margin="0,0,16.18,0">
            <Button Content="Back" Margin="0,0,16.18,0"/>
            <Button Content="Download All"  Margin="0"/>
        </DockPanel>
    </Grid>
</UserControl>
